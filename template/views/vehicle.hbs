<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Logistic</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body id="veh-body">

    {{>header}}

    {{#if error}}
        <p style="color: red;">{{error}}</p>
    {{/if}}
    
    <form action="/vehicle" method="POST" id="veh-fr">
        <fieldset class="vehicle-data">
            <legend>Vehicle Register!!</legend>
            <div class="vehicle-form">
                <div class="form-item">
                    <label for="name">Name</label>
                    <input type="text" id="name" name="name" placeholder="Full Name" required>
                </div>

                <div class="form-item">
                    <label for="pho">Phone No.</label>
                    <input type="number" id="pho" name="phone" placeholder="Phone No." pattern="^\d{10}$" maxlength="10" minlength="10" required>
                </div>

                <div class="form-item">
                    <label for="mail">E-mail</label>
                    <input type="email" id="mail" id="" name="email" placeholder="E-mail" required>
                </div>

                <div class="form-item">
                    <label for="pw">Password</label>
                    <input type="password" id="pw" name="password" placeholder="Password" required>
                    <button type="button" id="togglePassword">Show</button>

                </div>
            </div>
            <button type="submit" class="veh-register-btn">Register</button>
        </fieldset>

        
    </form>

    {{>footer}}

    <script>
        // Password Toggle Script
        document.getElementById('togglePassword').addEventListener('click', function () {
            const passwordField = document.getElementById('pw');
            const type = passwordField.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordField.setAttribute('type', type);
            this.textContent = type === 'password' ? 'Show' : 'Hide';
        });
    </script>
    
</body>
</html>